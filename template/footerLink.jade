extends ../view/columns/oneColumn
block info

block contentCol1_1
	block footerLink
		tr
			td(align="center")
				// footer link
				table(cellpadding="0" cellspacing="0" border="0" width="100%" bgcolor="#{colorSecondary__}")
					tr
						td(colspan="100" align="center" height="20")
					tr
						td(align="center" colspan="100" style="color:#{colorSecondary__};")
							span(style="color:#{colorSecondary}; #{fontXS}#{fontSans}")
								| #{communicationEmail01}
								a(href="#{LogoImgLink}?ga_campaign=#{data}#{lang}#{trakingSource}" style="color:#{colorPrimary};")
									| #{LogoStoreTxt}, 
								| add 
								a(href="mailto:#{contactMail}?ga_campaign=#{data}#{lang}#{trakingSource}" style="color:#{colorPrimary};")
									| #{contactMail} 
								| #{communicationEmail02}
								br
								| #{disclamer}
								| #{userMail}
					tr
						td(colspan="100" align="center" height="20")
					if footerLinksx
						tr
							each val in footerLinksx
								td(width="20%" align="center" valign="middle" style="#{center}")
									a(href="#{val.footerURL}?ga_campaign=#{data}#{lang}#{trakingSource}" align="center" target="_blank" style="#{center}#{fontSans}#{fontXS}#{decNone} color:#{colorPrimary};")
										| #{val.footerCopy}
					tr
						td(colspan="100" align="center" height="20")