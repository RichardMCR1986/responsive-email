extends ../view/columns/twoColumnFull.jade
block info
	include ../config
	append
		if lang == "en"
			- var LogoImg 				= "football4u_logo.jpg"
			- var LogoStoreTxt 			= "football4U"
			- var LogoImgLink 			= "http://www.football4u.it/it/"
		else
			- var LogoImg 				= "football4u_logo.jpg"
			- var LogoStoreTxt 			= "football4U"
			- var LogoImgLink 			= "http://www.football4u.it/it/"

		- var instagram = "https://instagram.com/football4uofficial/"
		- var facebook = "https://www.facebook.com/Football4U.it"
		- var blog = "http://blog.football4u.it/"
		- var youTube = "https://www.youtube.com/channel/UCzqG3NzsJtmTa4qJ54ssUEg/"
		- var gPlus = "https://plus.google.com/+Football4uItF4U/"

		- var logoImgHeight 			= "50px"
		- var socilaIconWidth 			= "40px"
		- var colorCopy 				= "#a2a2a2"

block contentCol1_2
	table(cellpadding="0" cellspacing="0" width="200" align="center")
		tr
			td(height="20px")
		tr
			td(align="center" valign="top")
				a(href="#{LogoImgLink}" height="#{logoImgHeight}")
					img(src="#{imgLink}#{LogoImg}" alt="#{LogoStoreTxt}" style="display: block; border: 0; height: #{logoImgHeight} !important;")
		tr
			td(height="10px")


block contentCol2_2
	table(cellpadding="0" cellspacing="0" width="200" align="center" valign="top")
		tr
			td(height="20px" colspan="10")
		tr
			td(align="center" colspan="10")
				span(style="#{fontS} color: #{colorCopy};") #{folowUscopy}
		tr
			td(height="10px" colspan="10")
		tr
			if facebook
				td(align="center" width="#{socilaIconWidth}" valign="top")
					a(href="#{facebook}")
						img(src="#{imgLink}facebook.jpg" alt="" style="display: block; border: 0; height: auto !important;")
			if youTube
				td(align="center" width="#{socilaIconWidth}" valign="top")
					a(href="#{youTube}")
						img(src="#{imgLink}youTube.jpg" alt="" style="display: block; border: 0; height: auto !important;")
			if gPlus
				td(align="center" width="#{socilaIconWidth}" valign="top")
					a(href="#{gPlus}")
						img(src="#{imgLink}gPlus.jpg" alt="" style="display: block; border: 0; height: auto !important;")
			if instagram
				td(align="center" width="#{socilaIconWidth}" valign="top")
					a(href="#{instagram}")
						img(src="#{imgLink}instagram.jpg" alt="" style="display: block; border: 0; height: auto !important;")
			if blog
				td(align="center" width="#{socilaIconWidth}" valign="top")
					a(href="#{blog}")
						img(src="#{imgLink}blog.jpg" alt="" style="display: block; border: 0; height: auto !important;")
		tr
			td(height="10px")